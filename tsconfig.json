{
  "extends": "@react-native/typescript-config/tsconfig.json",
   "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./src/types", "styled.d.ts"],
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "esModuleInterop": true,
    "strict": true,
       "types": [
      "jest", "node", "styled-components-react-native"
    ],
     "paths": {
      "@components/*": ["./src/components/*"],
      "@screens/*": ["./src/screens/*"],
      "@assets/*": ["./src/assets/*"],
      "@utils/*": ["./src/utils/*"],
      "@theme/*": ["./src/theme/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@services/*": ["./src/services/*"],
      "@navigation/*": ["./src/navigation/*"],
    }
  }

}
